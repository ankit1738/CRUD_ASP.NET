@model WebApplication1.Models.Employee

@{
    ViewBag.Title = "ViewEmployeeById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Edit User Details</h2>
<form id="form1" method="post" action="/Employee/Edit"
      enctype="application/x-www-form-urlencoded">
    <div class="form-group">
        <label for="Id">User Id</label>
        <input type="text" class="form-control" name="UserId" value="@Model.UserId" readonly="readonly" data-toggle="tooltip" data-placement="right" title="Cannot Change Id">
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
